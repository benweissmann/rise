class Enemy < Sprite
  def initialize(x, y)
    super "rocker.gif"
    add_animation(:kill_animation, ["kill1.gif", "kill2.gif", "kill3.gif"], [10, 10, 10])
    @x = x
    @y = y
    @health = 2
  end

def collide_with_Weapon weapon
    @health = 0
    puts "dead"
  end

 def pass_frame
    if @health <= 0
      #puts "dead"
      play_animation :kill_animation
      wait 30 do
       EasyRubygame.active_scene.sprites.delete self
      end
    end
 end
  #include Killable
 end